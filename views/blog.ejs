<!DOCTYPE html>
<html lang="en">
<head>
   <%- include("./partials/head")  %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/nav")  %>
<div class="container mt-4">
    <h1 ><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>"  width="600px"   />
    <p class=" container mt-3 pt-3 "><%= blog.body %></p>
</div>
<div class="container mt-4">
    <img src="<%= blog.createdBy.profileImageURL %>" width="60 px" />
    <%= blog.createdBy.fullName %>
</div>
<div class="container mt-3">
    <h1>Comments (<%= comment.length %>)</h1>
    <% if (locals.user) { %>
        <form action="blog/comment/<%= blog._id %>" method="post">
          
            <div class="mb-3">
              
              <input type="text" name="content" class="form-control" 
              placeholder="Enter Your Comment">
             
            </div>
           
           
            <button type="submit" class="btn btn-sm btn-primary">Add</button>
          </form>
     
    <% } %>
    <div class="mt-3">
        <% comment.forEach(comment => { %>
         <div>
            <img src="<%= comment.createdBy.profileImageURL %>" width="60px" />
            <%= comment.createdBy.fullName %>
            <pre><%= comment.content %></pre>
         </div>
        <% }) %>
    </div>
</div>
    <%- include("./partials/script")  %>
</body>
</html>